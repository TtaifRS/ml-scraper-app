{
  "appId": "com.taif-ML.xing-scraper",
  "productName": "Xing-scraper",
  "files": ["dist-electron", "dist-react"],
  "icon": "./xing-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/TtaifRS/ml-scraper-app"
  },
  "publish": {
    "provider": "github",
    "owner": "TtaifRS",
    "repo": "ml-scraper-app",
    "releaseType": "release"
  },
  "extraResources": [
   {
    "from":  "dist-electron/preload.cjs",
    "to": "app/dist-electron/preload.cjs"
   },
   {
    "from": ".env",
    "to": ".env"
   },
   {
    "from": "splash.html",
    "to": "app/dist-react/splash.html"
   }
  ],
  "mac": {
    "icon": "./xing-icon.icns",
    "target": "dmg"
  },
  "linux": {
    "target": "AppImage",
    "category": "Utility"
  },
  "win": {
    "target":[
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "artifactName": "Xing-scraper-${arch}.${ext}"
   
  },
  "nsis":{
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "perMachine": false,
    "createStartMenuShortcut": true,
    "shortcutName": "Xing Scraper",
    "deleteAppDataOnUninstall": true,
    "installerIcon": "./xing-icon.ico",
    "uninstallerIcon": "./xing-icon.ico",
    "uninstallDisplayName": "Xing Scraper Uninstall"

  },
  "asar": false,
  "asarUnpack": [
    "**/*.node",
    "dist-electron",
    "dist-react",
    ".env"
  ],
  "compression": "normal"
}